<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background_main_menu">
<Button
    android:id="@+id/buttonChangeSpeed"
    android:layout_width="85dp"
    android:layout_height="85dp"
    android:layout_marginStart="270dp"
    android:text="@string/slow_mode"
    android:textColor="@android:color/white"
    android:backgroundTint="#B18259"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/buttons"/>

        <Button
            android:id="@+id/buttonStartWithButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/first_button_Text"
            android:textColor="@android:color/white"
            android:backgroundTint="#B18259" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/tilt"/>

        <Button
            android:id="@+id/buttonStartWithTilt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/second_button_Text"
            android:textColor="@android:color/white"
            android:backgroundTint="#B18259" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/scores"/>

        <Button
            android:id="@+id/buttonViewScores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/third_button_Text"
            android:textColor="@android:color/white"
            android:backgroundTint="#B18259" />

    </LinearLayout>

</LinearLayout>
</RelativeLayout>
